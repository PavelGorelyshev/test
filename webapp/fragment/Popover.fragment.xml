<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Popover id="Popover" showHeader="false">
		<List id="listMeetingRoles" items="{path: '/jbmeeting_base_MeetingRoles'}">
			<headerToolbar>
				<OverflowToolbar >
					<content>
						<Label text="Choose role" design="Bold"/>
						<ToolbarSpacer/>
						<Button icon="sap-icon://decline" press="onPopoverClose" tooltip="Close"/>
					</content>
				</OverflowToolbar>
			</headerToolbar>
			<StandardListItem type="Active" title="{MeetingRoleText}" press="onPopoverChange"/>
		</List>
	</Popover>
</core:FragmentDefinition>