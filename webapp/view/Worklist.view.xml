	xmlns:core="sap.ui.core" xmlns:semantic="sap.f.semantic" xmlns:smartTable="sap.ui.comp.smarttable" xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" xmlns:f="sap.f" xmlns:unified="sap.ui.unified">
	<semantic:SemanticPage id="page" headerPinnable="false" preserveHeaderStateOnScroll="false" class="sapUiNoContentPadding">
		<semantic:titleHeading>
			<HBox alignItems="Center">
				<core:Icon src="sap-icon://video" color="Critical" class="sapUiTinyMarginEnd"/>
				<Title text="{i18n>worklistTitle}"/>
			</HBox>
		</semantic:titleHeading>
		<semantic:titleCustomTextActions></semantic:titleCustomTextActions>
		<semantic:headerContent>
			<smartFilterBar:SmartFilterBar id="smartFilterBar" entitySet="jbmeeting_base_MeetingHeaders"  liveMode="true" enableBasicSearch="false"
				useToolbar="true" useDateRangeType="true" considerSelectionVariants="true" persistencyKey="pk_MeetingHeadersSF">
				<smartFilterBar:controlConfiguration>
					<smartFilterBar:ControlConfiguration key="DateFrom" label="Date Period"
						conditionType="{ module: 'sap.ui.comp.config.condition.DateRangeType', ignoreTime: false, operations: { filter: [ {path: 'category', contains: 'MONTH', exclude:true}, {path: 'category', contains: 'QUARTER', exclude:true}, {path: 'key', equals: 'TO', exclude:true} ] } }"
						visibleInAdvancedArea="true"/>
				</smartFilterBar:controlConfiguration>
				<smartFilterBar:layoutData>
					<FlexItemData shrinkFactor="0"/>
				</smartFilterBar:layoutData>
			</smartFilterBar:SmartFilterBar>
		</semantic:headerContent>
		<semantic:content>
			<IconTabBar id="idIconTabBar" tabDensityMode="Compact" class="sapUiNoContentPadding" selectedKey="calendar">
