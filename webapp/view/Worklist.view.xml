						<!--<smartTable:SmartTable placeToolbarInTable="true" useVariantManagement="true" entitySet="jbmeeting_base_MeetingHeaders"-->
						<!--	smartFilterId="smartFilterBar" useExportToExcel="false" persistencyKey="pk_MeetingHeadersSF2" editTogglable="false" useTablePersonalisation="true" showRowCount="true" enableAutoBinding="true">-->
