						<!--	</smartTable:customToolbar>-->
							<Table sticky="HeaderToolbar" id="table" popinLayout="GridSmall" width="auto" alternateRowColors="true"
								items="{ path: '/jbmeeting_base_MeetingHeaders', sorter: { path: 'DateTo', descending: false } }"
								noDataText="{worklistView>/tableNoDataText}" busyIndicatorDelay="{worklistView>/tableBusyDelay}" growing="true" growingScrollToLoad="true"
								updateFinished="onUpdateFinished">
								<columns>
									<Column width="60%">
										<Text text="Meeting header"/>
									</Column>
									<Column width="15%">
										<Text text="Date and Time"/>
									</Column>
									<Column width="10%" demandPopin="true" minScreenWidth="Medium">
										<Text text="Status"/>
									</Column>
									<Column width="10%" demandPopin="true" minScreenWidth="Medium">
										<Text text="Type"/>
									</Column>
									<Column demandPopin="true" minScreenWidth="10000px">
										<Text text="Project"/>
									</Column>
									<Column demandPopin="true" minScreenWidth="10000px">
										<Text text="Location"/>
									</Column>
									<Column demandPopin="true" minScreenWidth="10000px">
										<Text text="Participants"/>
									</Column>
								</columns>
								<items>
									<ColumnListItem type="Navigation" press="onPress">
										<cells>
											<ObjectIdentifier title="{MeetingHeaderText}"/>
											<Text
												text="{path: 'DateFrom' , type: 'sap.ui.model.type.DateTime', formatOptions: { pattern: 'EE, d MMM' } } · {path: 'DateFrom' , type: 'sap.ui.model.type.DateTime', formatOptions: { pattern: 'HH:mm' } } – {path: 'DateTo' , type: 'sap.ui.model.type.DateTime', formatOptions: { pattern: 'HH:mm' } } "/>
											<HBox>
												<core:Icon src="{MeetingStatusIcon}" color="{MeetingStatusIconColor}" class="sapUiTinyMarginEnd"/>
												<Text text="{MeetingStatusText}"/>
											</HBox>
											<HBox>
												<core:Icon src="{MeetingTypeIcon}" class="sapUiTinyMarginEnd"/>
												<Text text="{MeetingTypeText}"/>
											</HBox>
											<Text text="jbmeeting: Разработка модуля"/>
											<Text text="{Location} "/>
											<f:AvatarGroup groupType="Group" avatarDisplaySize="XS" press="onGroupPress"
												items="{path: 'jbmeeting_base_MeetingHeaders__jbmeeting_base_Participants', templateShareable: false}">
												<f:AvatarGroupItem initials="{EmployeeText}" src="{AvatarURL_16x16}"/>
											</f:AvatarGroup>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						<!--</smartTable:SmartTable>-->
					</IconTabFilter>
					<IconTabFilter text="Calendar" icon="sap-icon://appointment" iconColor="Critical" key="calendar">
						<SinglePlanningCalendar title="My Calendar" viewChange="handleViewChange" appointmentSelect="handleAppointmentSelect"
							headerDateSelect="handleHeaderDateSelect" startDateChange="handleStartDateChange" appointmentDrop="handleAppointmentDrop"
							appointmentResize="handleAppointmentResize" appointmentCreate="handleAppointmentCreateDnD" moreLinkPress="handleMoreLinkPress"
							appointments="{path: '/jbmeeting_base_MeetingHeaders'}" stickyMode="All">
							<actions>
								<Button text="Create" press="onMeetingCreate" tooltip="Add new meeting" type="Emphasized"/>
								<Button id="legendButton" icon="sap-icon://legend" press="handleOpenLegend" tooltip="Open Calendar legend" ariaHasPopup="Dialog"/>
							</actions>
							<views>
								<SinglePlanningCalendarDayView key="DayView" title="Day"/>
								<SinglePlanningCalendarWorkWeekView key="WorkWeekView" title="Work Week"/>
								<SinglePlanningCalendarWeekView key="WeekView" title="Week"/>
								<SinglePlanningCalendarMonthView key="MonthView" title="Month"/>
							</views>
							<appointments>
								<unified:CalendarAppointment title="{MeetingHeaderText}" text="{MeetingHeaderDescription}" icon="{MeetingTypeIcon}" startDate="{DateFrom}"
									endDate="{DateTo}"></unified:CalendarAppointment>
							</appointments>
						</SinglePlanningCalendar>
					</IconTabFilter>
					<IconTabFilter text="Analysis" icon="sap-icon://table-chart" iconColor="Negative" key="analysis">
						<Text text="Analytical table go here ..."/>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</semantic:content>
	</semantic:SemanticPage>
</mvc:View>